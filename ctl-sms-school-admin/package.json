{
  "name": "ctl-sms-school-admin",
  "version": "1.0.0",
  "description": "Campus Technologies Limited Student Management System - School Admin Module",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "body-parser": "*",
    "express": "*",
    "express-handlebars": "^3.0.0"
  },
  "bolt": {
    "displayName": "School Admin",
    "main": "bolt-server.js",
    "index": "/",
    "system": true,
    "extensions": {
      "/school-admin": "/"
    },
    "files": {
      "icon": "assets/pages/img/icon.png",
      "icon-md": "assets/pages/img/icon-md.png"
    },
    "order": 0,
    "public": ["assets"],
    "tags": ["school-admin", "ctl", "ctl-sms", "ctl-sms-school-admin", "ctl-sms-plugins"],
    "collections": {
      "school-profile": "*",
      "sessions": "*",
      "terms": "*",
      "class-subjects": {
        "guests": "*",
        "tenants": ["ctl-sms-subjects", "ctl-sms-classes"]
      },
      "class-teachers": {
        "guests": "*",
        "tenants": ["ctl-sms-subjects", "ctl-sms-classes"]
      },
      "grades": "*"
    },
    "hooks": {
      "bolt/app-starting": "/app-starting",
      "bolt/app-collection-inserted": "/hooks/bolt/app-collection-inserted"
    },
    "dependencies": {
      "ctl-sms-home": "*"
    }
  },
  "author": "Campus Technologies Limited",
  "license": "ISC"
}
