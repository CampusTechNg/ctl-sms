{
  "name": "ctl-sms-noticeboard",
  "version": "1.0.0",
  "description": "Campus Technologies Limited Student Management System - Notice Board Module",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "body-parser": "*",
    "express": "*",
    "express-handlebars": "^3.0.0"
  },
  "bolt": {
    "displayName": "Notice Board",
    "main": "bolt-server.js",
    "index": "/",
    "system": true,
    "extensions": {
      "/noticeboard": "/"
    },
    "files": {
      "icon": "assets/pages/img/icon.png",
      "icon-md": "assets/pages/img/icon-md.png"
    },
    "order": 3,
    "public": ["assets"],
    "tags": ["noticeboard", "ctl", "ctl-sms", "ctl-sms-noticeboard", "ctl-sms-plugins"],
    "collections": {
      "notices": {
        "guests": "*",
        "options": {
          "validator": {
            "$and": [
              { "subject": { "$type": "string" } },
              { "message": { "$type": "string" } },
              { "date": { "$type": "date" } }
            ]
          }
        }
      }
    },
    "permissions": {
      "write-notice": {
        "displayName": "Create Notice",
        "description": "Permission to create, edit or delete notice"
      }
    },
    "hooks": {
      "bolt/app-starting": "/app-starting",
      "bolt/user-deleted": "/user-deleted",
      "bolt/user-updated": "/user-updated",
      "bolt/app-collection-inserted": "/hooks/bolt/app-collection-inserted",
      "bolt/app-collection-removed": "/hooks/bolt/app-collection-removed",

      "ctl-sms-noticeboard/notice-posted": "/hooks/ctl-sms-noticeboard/notice-posted",
      "ctl-sms-noticeboard/notice-deleted": "/hooks/ctl-sms-noticeboard/notice-deleted"
    },
    "dependencies": {
      "ctl-sms-home": "*"
    }
  },
  "author": "Campus Technologies Limited",
  "license": "ISC"
}
