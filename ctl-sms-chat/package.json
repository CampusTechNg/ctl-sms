{
  "name": "ctl-sms-chat",
  "version": "1.0.0",
  "description": "Campus Technologies Limited Student Management System - Chat Module",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "body-parser": "*",
    "express": "*",
    "express-handlebars": "^3.0.0"
  },
  "bolt": {
    "displayName": "Chat",
    "main": "bolt-server.js",
    "index": "/",
    "system": true,
    "extensions": {
      "/chat": "/",
      "chats": "/"
    },
    "files": {
      "icon": "assets/pages/img/icon.png",
      "icon-md": "assets/pages/img/icon-md.png"
    },
    "order": 3,
    "public": ["assets"],
    "tags": ["chat", "ctl", "ctl-sms", "ctl-sms-chat", "ctl-sms-plugins"],
    "collections": {
      "chats": "*"
    },
    "hooks": {
      "bolt/app-starting": "/app-starting",
      "bolt/user-deleted": "/user-deleted",
      "bolt/user-updated": "/user-updated",
      "bolt/app-collection-inserted": "/hooks/bolt/app-collection-inserted",

      "ctl-sms-chat/chat-posted": "/hooks/ctl-sms-chat/chat-posted"
    },
    "dependencies": {
      "ctl-sms-home": "*"
    }
  },
  "author": "Campus Technologies Limited",
  "license": "ISC"
}
